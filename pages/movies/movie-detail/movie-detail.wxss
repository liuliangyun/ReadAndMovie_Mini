@import "../stars/stars-template.wxss";

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter:blur(20px);
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top:0;
  left:0;
  display:flex;
  flex-direction: column;
}

.main-title {
  font-size: 19px;
  color:#fff;
  font-weight:bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color:#fff;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font {
  color: #f21146;
  font-size:22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #666;
  font-size:22rpx;
  margin-right: 30rpx;
}

.movie-img {
  width: 175rpx;
  height: 238rpx;
  position: absolute;
  top:160rpx;
  right: 30rpx;
}

.summary {
  margin-top: 40rpx;
  margin-left:40rpx;
  color: #777777;
}

.original-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  white-space:nowrap;
  color: #999999;
}

.hr {
  margin-top:45rpx;
  width: 100%;
  height: 1px;
  background-color: #d9d9d9;
}

.synopsis {
  margin-top: 50rpx;
  margin-left:40rpx;
  margin-right: 40rpx;
  display:flex;
  flex-direction: column;
}

.synopsis-font {
  color: #999999;
}

.summary-content {
  margin-top: 20rpx;
  line-height:40rpx;
  letter-spacing: 1px;
}

.cast {
  margin-top: 50rpx;
  margin-left:40rpx;
  display:flex;
  flex-direction: column;
}

.cast-font {
  color: #999999;
  margin-bottom: 40rpx;
}

.cast-imgs {
  /* 不换行 */
  white-space: nowrap;
}

.cast-container {
  /* 行内元素用flex布局 */
  display:inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align:center;
  /* 正常换行 */
  white-space: normal;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
}