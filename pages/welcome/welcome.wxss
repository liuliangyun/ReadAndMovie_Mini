.container{
  display: flex;
  /* 定义纵轴为主轴 */
  flex-direction: column;
  /* 这里使用align-items而不是justify-content，因为纵轴是主轴，横轴为交叉轴 */
  align-items: center;
}

page{
  background-color: #b3d4db;
  height: 100%;
}

.user-avatar{
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.user-name{
  font-size: 32rpx;
  font-weight: bold;
}

.moto{
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}

.moto-container{
  margin-top: 200rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  height: 80rpx;
  width: 200rpx;
  text-align: center;
}

